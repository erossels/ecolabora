                      <p class="card-text"><%= p1.category %></p>
                      <p class="card-text"><%= p1.user %></p>
                      <p class="card-text"><%= p1.description%></p>
                      <p class="card-text"><%= p1.r_action%></p>
                      <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                          <%= link_to 'Ver', p1, class: 'textos btn btn-sm btn-outline-secondary'%>
