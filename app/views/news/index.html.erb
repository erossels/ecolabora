<div class='container-fluid home-body'>
  <div class='container py-5 px-2 mx-auto'>

    <div class='container-fluid header p-2'>
      <div class='contaoner col-md-12 mx-auto my-3 center'>
          <%= image_tag("Ecolabora.png", class: "mx-auto small-logo d-block") %>
      </div>
      <div class='container col-md-10 mx-auto my-3'>

        <div>
          <h2 class='titulos my-2'>Noticias</h2>

          <%= link_to 'Nueva noticia', new_news_path, class:'btn textos btn-form center ml-auto d-block col-3'%>
        </div>
        <table class='table textos my-4'>
          <thead>
            <tr>
              <th class='textos'>Título</th>
              <th class='textos'>Contenido</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @news.each do |news| %>
              <tr>
                <td class='textos'><%= news.title %></td>
                <td class='textos'><%= news.content %></td>
                <td class='textos'><%= link_to 'Ver', news %></td>
                <td class='textos'><%= link_to 'Editar', edit_news_path(news) %></td>
                <td class='textos'><%= link_to 'Borrar', news, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        
      </div>
    </div> 
  </div>
</div>


