<%= form_with(model: news, local: true) do |form| %>
  <% if news.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(news.errors.count, "error") %> no permitieron que este mensaje fuera enviado:</h2>

      <ul>
        <% news.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class='container'>
    <div class="field">
      <%= form.label :title, 'TÃ­tulo' %>
      <%= form.text_field :title %>
    </div>

    <div class="field">
      <%= form.label :content, 'Contenido' %>
      <%= form.text_area :content, class:"form-control", 'data-provider': :summernote %>
    </div>

    <div class='field textos'>
      <%= form.label :photo, "Imagen" %><br>
      <%= form.file_field :photo%>
    </div>

    <%= form.hidden_field :admin_id, :value => params[:admin_id] = current_admin.id %>
  </div>

  <div class="actions">
    <%= form.submit 'Crear noticia', class:"btn btn-form"%>
  </div>
<% end %>
