<div class="row py-5 px-4 profile-body">
    <div class="col-md-10 mx-auto">
        <!-- Profile widget -->
        <div class="bg-white shadow rounded overflow-hidden">
            <div class="px-4 pt-0 pb-4 cover">
                <div class="media align-items-end profile-head">
                    <div class="profile mr-3"><%= image_tag @user.avatar.variant(resize:"130x130").processed, alt:"...", width:"130", class:"rounded mb-2 img-thumbnail"%><%= link_to "Editar perfil", edit_user_registration_path(current_user), class: "btn btn-outline-dark btn-sm btn-block" %></div>
                    <div class="media-body mb-5 text-white">
                        <h4 class="mt-0 mb-0"><%= @user.first_name %> <%= @user.last_name %></h4>
                        <p class="small mb-4"> <i class="fas fa-map-marker-alt"></i><%=County.find(@user.city)%>, <%= Region.find(@user.province) %></p>
                    </div>
                </div>
            </div>
            <div class="bg-light p-4 d-flex justify-content-end text-center">
                <ul class="list-inline mb-0">
                    <li class="list-inline-item">
                        <h5 class="font-weight-bold mb-0 d-block"><%= @products.count %></h5><small class="text-muted"> <i class="fas fa-image mr-2"></i>Productos ofrecidos</small>
                    </li>
                    <li class="list-inline-item">
                        <h5 class="font-weight-bold mb-0 d-block"><%= @products.sold.count %></h5><small class="text-muted"> <i class="fas fa-user mr-2"></i>Productos entregados</small>
                    </li>
                    <li class="list-inline-item">
                        <h5 class="font-weight-bold mb-0 d-block"><%= @sales.count %></h5><small class="text-muted"> <i class="fas fa-user mr-2"></i>Productos recibidos </small>
                    </li>
                    <li class="list-inline-item">
                        <h5 class="font-weight-bold mb-0 d-block"><%= (@evaluations.average(:grade)).nil? ? 0 : "" %></h5><small class="text-muted"> <i class="fas fa-user mr-2"></i>Calificaci√≥n promedio</small>
                    </li>
                </ul>
            </div>

            <div class="py-4 px-4">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <h5 class="mb-0">Mis productos</h5><a href="#" class="btn btn-link text-muted">Ver todos mis productos</a>
                </div>
                
                    <% if !@products.last(4).nil? %>
                        <div class="p-4 rounded shadow-sm bg-light">
                            <p class="font-italic mb-0 center">Aun no has subido productos</p>
                        </div>
                    <% else %>
                        <div class="row">
                            <% @products.last(4).each do |pr| %>
                                <% if !product.nil?  %>
                                    <div class="col-md-4">
                                    <div class="card mb-4 box-shadow">
                                        <img class="card-img-top" data-src="holder.js/100px225?theme=thumb&amp;bg=55595c&amp;fg=eceeef&amp;text=Thumbnail" alt="Thumbnail [100%x225]" style="height: 225px; width: 100%; display: block;" src="data:image/svg+xml;charset=UTF-8,%3Csvg%20width%3D%22288%22%20height%3D%22225%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20viewBox%3D%220%200%20288%20225%22%20preserveAspectRatio%3D%22none%22%3E%3Cdefs%3E%3Cstyle%20type%3D%22text%2Fcss%22%3E%23holder_178ecc4cbb1%20text%20%7B%20fill%3A%23eceeef%3Bfont-weight%3Abold%3Bfont-family%3AArial%2C%20Helvetica%2C%20Open%20Sans%2C%20sans-serif%2C%20monospace%3Bfont-size%3A14pt%20%7D%20%3C%2Fstyle%3E%3C%2Fdefs%3E%3Cg%20id%3D%22holder_178ecc4cbb1%22%3E%3Crect%20width%3D%22288%22%20height%3D%22225%22%20fill%3D%22%2355595c%22%3E%3C%2Frect%3E%3Cg%3E%3Ctext%20x%3D%2296.828125%22%20y%3D%22118.8%22%3EThumbnail%3C%2Ftext%3E%3C%2Fg%3E%3C%2Fg%3E%3C%2Fsvg%3E" data-holder-rendered="true">
                                        <div class="card-body">
                                        <p class="card-text"><%= product.category %></p>
                                        <p class="card-text"><%= product.description%></p>
                                        <p class="card-text"><%= product.r_action%></p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="btn-group">
                                            <%= link_to 'Ver', product, class: 'textos btn btn-sm btn-outline-secondary'%>
                                            <%= link_to 'Editar', edit_product_path(product), class: 'textos btn btn-sm btn-outline-secondary'%>
                                            <%= link_to 'Borrar', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'textos btn btn-sm btn-outline-secondary'%>
                                            </div>
                                            <small class="text-muted">9 mins</small>
                                        </div>
                                        </div>
                                    </div>
                                    </div>
                                <% end  %>
                            <% end %>
                        </div>
                    <% end  %>
            </div>

            <div class="px-4 py-3">
                 <hr>
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <h5 class="mb-0">Mis compras</h5><a href="#" class="btn btn-link text-muted"></a>
                </div>
                <div class="p-4 rounded shadow-sm bg-light">
                    <p class="font-italic mb-0">Web Developer</p>
                    <p class="font-italic mb-0">Lives in New York</p>
                    <p class="font-italic mb-0">Photographer</p>
                </div>
            </div>

            <div class="px-4 py-3">
                <hr>
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <h5 class="mb-0">Mis compras pendientes</h5><a href="#" class="btn btn-link text-muted"></a>
                </div>
                <div class="p-4 rounded shadow-sm bg-light">
                    <p class="font-italic mb-0">Web Developer</p>
                    <p class="font-italic mb-0">Lives in New York</p>
                    <p class="font-italic mb-0">Photographer</p>
                </div>
            </div>
        </div>
    </div>
</div>