<%= form_with(model: message, local: true) do |form| %>
  <% if message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(message.errors.count, "error") %> no permitieron que este mensaje fuera enviado</h2>
      <ul>
        <% message.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= form.hidden_field :user_id, :value => params[:user_id] = current_user.id %>
  <%= form.hidden_field :chat_id, :value => params[:chat_id] = @chat.id%>

  <div class="input-group color-input">
    <%= form.text_area :content, placeholder:"Type your message...", class:"form-control type_msg", 'data-provider': :summernote %>
    <div class="input-group-append">
      <button type="submit" class="btn input-group-text send_btn">
        <i class="fas fa-paper-plane iconos "></i>
      </button>
    </div>
  </div>

<% end %>
