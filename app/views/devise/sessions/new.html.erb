<div class='container-fluid header'>
  <div class='contaoner col-md-12 mx-auto my-3 center'>
      <%= image_tag("Ecolabora.png", class: "mx-auto small-logo d-block") %>
  </div>

  <div class='container col-md-4 mx-auto my-3'>
    <h2 class='titulos'>Inicia sesión</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field textos">
        <%= f.label :email, class: 'textos' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field textos">
        <%= f.label "Contraseña", class: 'textos' %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field textos">
          <%= f.check_box :remember_me %>
          <%= f.label "Recuérdame", class:'textos' %>
        </div>
      <% end %>

      <div class="actions textos">
        <%= f.submit "Ingresa", class:"btn-form btn textos" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

</div>